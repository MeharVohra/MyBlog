<%- include("partials/header") -%>
<h1>Contact Us</h1>


<form action="/contact" method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Your Name</label>
        <input name="name" type="text" class="form-control" id="exampleFormControlInput1" autocomplete="off">
      </div>

      <div class="mb-3">
      <label for="exampleFormControlInput2" class="form-label">Your Email</label>
<input name="mailid" type="email" class="form-control" id="exampleFormControlInput2" autocomplete="off">
</div>

      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Comment</label>
        <textarea type="text" name="comment" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    
      </div>
      <div class="col-auto">
        <button name="send" type="submit" href="/MailSuccess" class="btn btn-dark mb-3">Send</button>
      </div>
    </form>
<%- include("partials/footer") -%>